@page "/muutuote"
@inject IJSRuntime Js
@inject NavigationManager NavigationManager

<!-- Muu tuote tai -tarvike -->

<div id="muutuote" class="container">

	<div class="Hover_area" id="hover_style">

		<div id="open" style="text-align:center">

		</div>
		<div class="customization-process">
			<section>
				<div class="row people">
				<div class="col-md-12 col-lg-12">
				<div class="table-responsive text-center">

					<div class="secondary-title">
						<h4>Muu tuote tai -tarvike</h4>
					</div>

					<div id="id01" class="table t1" style="color:white;">               

						<div class="intro">
							<div style="background-color:#330808" >         
							</div>
						</div>  
						<div style="border-bottom-color:#fff0;">

							<BlazorModalAll TitleAll="Muu tuote tai -tarvike" IsOpened="isOpened" Items="henkilot" TItemAll="Henkilo">
								<ModalBodyAll>
									<table class="backgcolor">
										<div class="intro">
											Id-numero: #@context.NayteId
										</div>
										<tbody id="tBodyElement" @onclick="ToggleHeight" style="@(Selected ? "height:auto;" : "height:none;")">
											<tr class="customization style1">
												<td>
													<div class="box" style="cursor: none;"><img class="img10" src="@context.KuvaUrl"></div>
													@if (!string.IsNullOrEmpty(context.Email))
                                                    {
	                                                    <a href="@context.Email" onclick="@context.AikaJaljella"><i aria-hidden="true">Lisätietoa</i></a>
                                                    }
                                                    else
                                                    {
	                                                    <a href="#" class="hidden-link">Lisätietoa</a>
                                                    }
												</td>
												<td>
													<!--Profiili-->
													<div>
														<div class="item row">
															<div class="front">
																<div class="box"><div class="text-center"><br><span class="clamp">@context.Kuvaus</span></div><br /></div>
																<div class="box"><div class="text-center"><br><span class="clamp"></span>@context.Teknologiat</div><br /></div>
																<div><hr style="color:black; height:10px"></div>
															</div>
														</div>
													</div>
													<!--Profiili-->
												</td>
											</tr>
										</tbody>
										@if (!string.IsNullOrEmpty(context.VideoUrl))
										{
											<div id="vid00">
												<video id="vid01" class="vidText" src="@context.VideoUrl" controls="" muted="" loop="" type="video/mp4"></video>
											</div>
										}
										else
										{
											//
										}
										<hr style="background-color: red;padding: 10px;min-width: 200px;">
									</table>
								</ModalBodyAll>
								<ModalFooterAll>

								</ModalFooterAll>
							</BlazorModalAll>
						</div>  
					</div>   
				</div>
				</div>
				</div>
			</section>
		</div>
	</div>
</div>

